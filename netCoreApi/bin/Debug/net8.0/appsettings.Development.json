{
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\MSSQLLocalDB;Database=DotNetApi;TrustServerCertificate=True;Integrated Security=true;"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Enrichers.Environment" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Default",
          "tableName": "SeriLog",
          "autoCreateSqlTable": true,
          "restrictedToMinimumLevel": "Error",
          "columnOptionsSection": {
            "removeStandardColumns": [ "Properties", "MessageTemplate" ],
            "standardColumnOptions": {
              "timeStamp": { "columnName": "TimeStamp" },
              "level": { "columnName": "Level" },
              "message": { "columnName": "Message" },
              "exception": { "columnName": "Exception" }
            },
            "customColumns": [
              {
                "columnName": "CorrelationId",
                "dataType": "nvarchar",
                "dataLength": 32
              }
            ]
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
